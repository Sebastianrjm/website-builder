<script>
 document.addEventListener('DOMContentLoaded', function() {
  // Inicializa AOS
  AOS.init();

  // Helper para destrucción segura Swiper
  function safeDestroySwiper(swiperInstance, selector) {
    try {
      // Solo destruye si:
      // - existe la instancia
      // - tiene método destroy
      // - su elemento DOM existe en el documento
      if (
        swiperInstance &&
        typeof swiperInstance.destroy === "function" &&
        swiperInstance.el &&
        document.body.contains(swiperInstance.el)
      ) {
        swiperInstance.destroy(true, true);
      }
    } catch (e) {
      // Opcional: loguea si quieres debug
      // console.warn('Error destroying swiper:', e);
    }
    return undefined;
  }

  // Swiper principal
  window.mySwiperInstance = safeDestroySwiper(window.mySwiperInstance, '.mySwiper');
  window.mySwiperInstance = new Swiper('.mySwiper', {
    pagination: {
      el: '.swiper-pagination',
    },
  });

  // Swiper para art7-swiper
  window.art7SwiperInstance = safeDestroySwiper(window.art7SwiperInstance, '.art7-swiper');
  window.art7SwiperInstance = new Swiper('.art7-swiper', {
    slidesPerView: 1,
    spaceBetween: 24,
    pagination: {
      el: '.art7-swiper-pagination',
      clickable: true,
    },
    loop: true,
    autoplay: {
      delay: 1700,
      disableOnInteraction: false
    },
    speed: 4000,
  });

  // Swiper para art7-back-swiper
  window.art7BackSwiperInstance = safeDestroySwiper(window.art7BackSwiperInstance, '.art7-back-swiper');
  window.art7BackSwiperInstance = new Swiper('.art7-back-swiper', {
    slidesPerView: 5,
    spaceBetween: 24,
    loop: true,
    autoplay: {
      delay: 1700,
      disableOnInteraction: false
    },
    speed: 4000,
    breakpoints: {
      0: {
        slidesPerView: 1,
        spaceBetween: 10
      },
      600: {
        slidesPerView: 3,
        spaceBetween: 16
      },
      900: {
        slidesPerView: 5,
        spaceBetween: 24
      }
    }
  });

  // Navbar sticky después del header
  const navbar = document.getElementById('mainNavbar');
  const header = document.querySelector('header.hero-header');
  const navbarHeight = navbar.offsetHeight;

  function onScroll() {
    const headerBottom = header.getBoundingClientRect().bottom;
    if (headerBottom - navbarHeight <= 0) {
      navbar.classList.add('sticky');
    } else {
      navbar.classList.remove('sticky');
    }
  }

  window.addEventListener('scroll', onScroll);
  window.addEventListener('resize', onScroll);
  onScroll();

  // Efecto ZOOM en .art7-back-card al tocar/click/tap (mobile y desktop)
  const backCards = document.querySelectorAll('.art7-back-card');
  backCards.forEach(function(card) {
    card.addEventListener('touchstart', function() {
      card.classList.add('zoom-effect');
    }, { passive: true });
    card.addEventListener('touchend', function() {
      card.classList.remove('zoom-effect');
    }, { passive: true });
    card.addEventListener('mousedown', function() {
      card.classList.add('zoom-effect');
    });
    card.addEventListener('mouseup', function() {
      card.classList.remove('zoom-effect');
    });
    card.addEventListener('mouseleave', function() {
      card.classList.remove('zoom-effect');
    });
  });
});
