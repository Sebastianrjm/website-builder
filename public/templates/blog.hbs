    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>
        var mainHeaderSwiper = new Swiper("#mainHeaderSwiper", {
            loop: true,
            effect: "slide",
            navigation: {
                nextEl: ".main-header-swiper .swiper-button-next",
                prevEl: ".main-header-swiper .swiper-button-prev"
            },
            pagination: {
                el: ".main-header-swiper .swiper-pagination",
                clickable: true
            },
            autoplay: {
                delay: 6000,
                disableOnInteraction: false
            }
        });

        var clientesSwiper = new Swiper("#clientesSwiper", {
            loop: true,
            navigation: {
                nextEl: ".clientesSwiper .swiper-button-next",
                prevEl: ".clientesSwiper .swiper-button-prev"
            },
            pagination: {
                el: ".clientesSwiper .swiper-pagination",
                clickable: true
            },
            slidesPerView: 1,
            spaceBetween: 36,
            autoplay: {
                delay: 7800,
                disableOnInteraction: false
            }
        });

        function updateOpinionText() {
            const activeSlide = document.querySelector('#clientesSwiper .swiper-slide-active');
            const opinion = activeSlide ? activeSlide.getAttribute('data-opinion') : '';
            document.getElementById('opinion-actual').textContent = opinion || '';
        }

        updateOpinionText();
        clientesSwiper.on('slideChange', updateOpinionText);
    </script>
    <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init({
