    </script>
    <script>
        var patrocinadoresSwiper = new Swiper("#patrocinadoresSwiper", {
            loop: true,
            slidesPerView: 3,
            centeredSlides: true,
            spaceBetween: 30,
            navigation: {
                nextEl: ".patro-next",
                prevEl: ".patro-prev"
            },
            breakpoints: {
                0: {
                    slidesPerView: 1
                },
                600: {
                    slidesPerView: 2
                },
                900: {
                    slidesPerView: 3
                }
            }
        });
    </script>
